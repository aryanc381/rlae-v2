generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model KB_MAIN {
  id Int @id @default(autoincrement())
  category        String
  use_case        String @unique
  qualities       String[]
  outliers        String[]
  specs           String[]
  conv_rate       Float 
  archive         Int[] 
  RFC             String
}

model KB_ARCHIVE {
  id              Int @id @default(autoincrement())
  parent_id       Int
  use_case        String
  qualities       String[]
  outliers        String[]
  specs           String[]
  conv_rate       Float 
}